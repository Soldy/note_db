
/**
 * @ptable note_texts
 * @pcol {serial} id 
 * @pcol {uint64_t} note
 * @pcol {uint64_t} highlight
 * @pcol {string} text
**/

CREATE TABLE `note_texts` (
    `id` SERIAL,
    `note` BIGINT UNSIGNED NOT NULL,
    `highlight` BIGINT UNSIGNED NOT NULL,
    `text` TEXT NOT NULL,
     KEY `index` (`id`)
)  ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;;
